  ghc-options: -auto-all -Wall 

  c-sources:
    csrc/lmdb/mdb.c
    csrc/lmdb/midl.c
    csrc/murmur3/murmur3.c
    csrc/wikrt.c
  includes:
    csrc/lmdb/lmdb.h
    csrc/lmdb/midl.h
    csrc/murmur3/murmur3.h
    csrc/wikilon-runtime.h
  include-dirs: 
    csrc/lmdb
    csrc/murmur3
    csrc/
  cc-options: -W -Wall -O2 -g -pthread -fPIC
  extra-libraries: pthread c
    

